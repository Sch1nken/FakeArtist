{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "es2015",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "dom",
            "es2018"
        ],
    },
    "include": [
        "src",
    ]
}