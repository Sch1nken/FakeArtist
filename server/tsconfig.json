{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "declaration": true,
        //"rootDir": "./src",
        "esModuleInterop": true,
        "outDir": "dist",
        //"moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src",
    ]
}