{
    "compilerOptions": {
        "target": "es2016",
        "module": "nodenext",
        "declaration": true,
        //"rootDir": "src",
        "esModuleInterop": true,
        "outDir": "dist",
        "moduleResolution": "nodenext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "es2016"
        ]
    },
    "include": [
        "src",
    ],
}