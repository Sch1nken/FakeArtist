{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "include": [
        "src",
    ]
}